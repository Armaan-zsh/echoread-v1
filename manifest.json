{
  "manifest_version": 3,
  "name": "EchoRead v11.0 (The Beast)",
  "version": "11.0",
  "description": "Reads HTML articles and ALL PDFs (including scans) with OCR.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "OpenDyslexic-Regular.otf",
        "readability.js",
        "tesseract.min.js",
        "eng.traineddata",
        "pdf-viewer.html",
        "pdf-viewer.js",
        "pdf.js",
        "pdf.worker.js",
        "tesseract-core.wasm.js",
        "library.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}