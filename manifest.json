{
  "manifest_version": 3,
  "name": "EchoRead v9.0 (Self-Contained)",
  "version": "9.0",
  "description": "Reads HTML articles and ALL PDFs (including scans) with OCR.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "OpenDyslexic-Regular.otf",
        "readability.js",
        "tesseract.min.js",
        "eng.traineddata",
        "pdf-viewer.html",
        "pdf-viewer.js",
        
        "pdf.js",
        "pdf.worker.js",
        
        "tesseract-core.wasm.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
