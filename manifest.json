{
  "manifest_version": 3,
  "name": "EchoRead v3.3 (BEAST MODE)",
  "version": "3.3",
  "description": "Reads articles with AI-powered simplification.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "OpenDyslexic-Regular.otf",
        "readability.js" 
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
