{
  "manifest_version": 3,
  "name": "EchoRead v4.0 (OCR Beast Mode)",
  "version": "4.0",
  "description": "Reads HTML articles and ALL PDFs (including scans) with OCR.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "OpenDyslexic-Regular.otf",
        "readability.js",
        "pdf.mjs",
        "pdf.worker.mjs",
        "tesseract.min.js",
        "eng.traineddata"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
